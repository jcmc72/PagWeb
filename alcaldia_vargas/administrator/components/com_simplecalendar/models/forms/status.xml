<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_simplecalendar/models/fields"
	>
		<field name="id" type="text" default="0"
			readonly="true" class="readonly input-small"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" 
		/>

		<field name="name" type="text" class="inputbox"
			size="40" label="COM_SIMPLECALENDAR_STATUS_FIELD_NAME_LABEL"
			description="COM_SIMPLECALENDAR_STATUS_FIELD_NAME_DESC" required="true" 
		/>

		<field name="alias" type="text" class="inputbox"
			size="40" label="JFIELD_ALIAS_LABEL"
		/>
			
		<field name="color" type="colorpick" class="inputbox input-small"
			size="40" label="COM_SIMPLECALENDAR_STATUS_FIELD_COLOR_LABEL"
			description="COM_SIMPLECALENDAR_STATUS_FIELD_COLOR_DESC" 
			required="true" 
		/>
		
		<field name="state" type="list"
			label="JSTATUS" description="COM_SIMPLECALENDAR_STATUS_FIELD_STATE_DESC"
			class="inputbox span12 small" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		
	</fieldset>
</form>