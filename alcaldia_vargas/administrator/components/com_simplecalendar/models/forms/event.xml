<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_simplecalendar/models/fields"
	>
		<field name="id" type="text" default="0"
			readonly="true" class="input-small readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />

		<field name="name" type="text" class="inputbox"
			size="40" label="COM_SIMPLECALENDAR_EVENT_FIELD_NAME_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_NAME_DESC" required="true" />

		<field name="venue" type="text" class="inputbox"
			size="40" label="COM_SIMPLECALENDAR_EVENT_FIELD_VENUE_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_VENUE_DESC" required="true" />
			
		<field name="address" type="text" class="inputbox"
			size="40" label="COM_SIMPLECALENDAR_EVENT_FIELD_ADDRESS_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_ADDRESS_DESC" />
		
		<field
			name="latlon"
			type="gmap"
			show="0"
			class="inside" 
			searchfield="address"
			label="COM_SIMPLECALENDAR_EVENT_FIELD_LATLON_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_LATLON_DESC" />
		
		<field name="start_dt" type="date" class="inputbox"
			label="COM_SIMPLECALENDAR_EVENT_FIELD_START_DATE_LABEL" size="22"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_START_DATE_DESC" 
			required="true" />
		
		<field name="start_time" type="time" class="inputbox input-small"
			label="COM_SIMPLECALENDAR_EVENT_FIELD_START_TIME_LABEL" size="22"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_START_TIME_DESC" />
		
		<field name="end_dt" type="date" class="inputbox"
			label="COM_SIMPLECALENDAR_EVENT_FIELD_END_DATE_LABEL" size="22"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_END_DATE_DESC" />
		
		<field name="end_time" type="time" class="inputbox input-small"
			label="COM_SIMPLECALENDAR_EVENT_FIELD_END_TIME_LABEL" size="22"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_END_TIME_DESC" />
		
		<field name="reserve_dt" type="date" class="inputbox"
			label="COM_SIMPLECALENDAR_EVENT_FIELD_RESERVE_DATE_LABEL" size="22"
			filter="user_utc" 
			description="COM_SIMPLECALENDAR_EVENT_FIELD_RESERVE_DATE_DESC" />
			
		<field name="alias" type="text" class="inputbox"
			size="40" label="JFIELD_ALIAS_LABEL"
		/>

		<field name="catid" type="categoryedit" extension="com_simplecalendar"
			label="JCATEGORY" description="COM_SIMPLECALENDAR_EVENT_FIELD_CATEGORY_DESC"
			class="inputbox" required="true"
			addfieldpath="/administrator/components/com_categories/models/fields"
		>
		</field>
		
		<field name="statusid" type="status"
			label="COM_SIMPLECALENDAR_EVENT_FIELD_STATUS_LABEL" description="COM_SIMPLECALENDAR_EVENT_FIELD_STATUS_DESC"
			class="inputbox" 
		>
		</field>
		
		<field name="state" type="list"
			label="JSTATUS" description="COM_SIMPLECALENDAR_EVENT_FIELD_STATE_DESC"
			class="inputbox span12 small" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		
		<field name="asset_id" type="hidden" filter="unset" /> 
		
		<field name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox span12 small"
			size="1"
		/>
	</fieldset>

	<fieldset name="permissions">
		<field name="rules" type="rules" label="JFIELD_RULES_LABEL"
			translate_label="false" class="inputbox" filter="rules"
			component="com_simplecalendar" section="event" validate="rules"
		/>
	</fieldset>

	<fieldset name="extended"
		label="COM_SIMPLECALENDAR_EVENT_TAB_EXTINFO"
	>
		<field name="description" type="editor"
			buttons="true"
			hide="pagebreak,readmore"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_DESCRIPTION_DESC"
			filter="safehtml"
			label="JGLOBAL_DESCRIPTION"
			asset_id="com_simplecalendar"
		/>
		<field name="customfield1" type="customfield" class="inputbox"
			size="40" label="COM_SIMPLECALENDAR_EVENT_FIELD_CUSTOMFIELD1_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_CUSTOMFIELD1_DESC" />
		<field name="customfield2" type="customfield" class="inputbox"
			size="40" label="COM_SIMPLECALENDAR_EVENT_FIELD_CUSTOMFIELD2_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_CUSTOMFIELD2_DESC" />
	</fieldset>
	
	<fieldset name="publish"
		label="COM_SIMPLECALENDAR_EVENT_TAB_DETAILS"
	>
		<field name="hits" type="hits" default="0"
			label="COM_SIMPLECALENDAR_EVENT_FIELD_HITS_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_HITS_LABEL" />
		
		<field name="created_dt" type="calendar"
			label="COM_SIMPLECALENDAR_EVENT_FIELD_CREATED_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_CREATED_DESC"
			class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S"
			filter="user_utc" />
			
		<field name="created_by" type="user"
			label="COM_SIMPLECALENDAR_EVENT_FIELD_CREATED_BY_LABEL" 
			description="COM_SIMPLECALENDAR_EVENT_FIELD_CREATED_BY_DESC" 
			class="readonly"
			readonly="true"
		/>

		<field name="modified_dt" type="calendar" class="readonly"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_MODIFIED_DESC"
			size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

		<field name="modified_by" type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
		 />
	</fieldset>
	
	<fieldset name="organizer"
		label="COM_SIMPLECALENDAR_EVENT_TAB_ORGANIZERS"
		addfieldpath="/administrator/components/com_categories/models/fields"
	>
		<field name="organizer_id" type="organizer"
			label="COM_SIMPLECALENDAR_EVENT_FIELD_ORGANIZER_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_ORGANIZER_DESC"
			class="inputbox"
			onchange="fillOrganizerData();" />
		
		<field name="contact_name" type="text" class="inputbox"
			size="40" label="COM_SIMPLECALENDAR_EVENT_FIELD_CONTACT_NAME_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_CONTACT_NAME_DESC" />
			
		<field name="contact_email" type="text" class="inputbox validate-email"
			size="40" label="COM_SIMPLECALENDAR_EVENT_FIELD_CONTACT_EMAIL_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_CONTACT_EMAIL_DESC" 
		 />
	
		<field name="contact_website" type="text" class="inputbox validate-url"
			size="40" label="COM_SIMPLECALENDAR_EVENT_FIELD_CONTACT_WEBSITE_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_CONTACT_WEBSITE_DESC" />
		
		<field name="contact_telephone" type="text" class="inputbox"
			size="40" label="COM_SIMPLECALENDAR_EVENT_FIELD_CONTACT_TELEPHONE_LABEL"
			description="COM_SIMPLECALENDAR_EVENT_FIELD_CONTACT_TELEPHONE_DESC" />
	
	
	</fieldset>	
	<fieldset name="metadata"
		label="JGLOBAL_FIELDSET_METADATA_OPTIONS"
	>
		<field name="metakey" type="textarea" class="inputbox"
			rows="3" cols="30" label="JFIELD_META_KEYWORDS_LABEL"
			description="JFIELD_META_KEYWORDS_DESC" />
		
		<field name="metadesc" type="textarea" class="inputbox"
			rows="3" cols="30" label="JFIELD_META_DESCRIPTION_LABEL"
			description="JFIELD_META_DESCRIPTION_DESC" />
	</fieldset>
</form>